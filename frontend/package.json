{
  "name": "microservice-social",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install:all": "npm install",
    "dev:host": "npm run dev --workspace=host",
    "dev:dashboard": "npm run dev --workspace=dashboard",
    "dev:user-profile": "npm run dev --workspace=user-profile",
    "build:all": "npm run build --workspaces",
    "build:host": "npm run build --workspace=host",
    "build:dashboard": "npm run build --workspace=dashboard",
    "build:user-profile": "npm run build --workspace=user-profile"
  }
}
